/* pages/recharge/recharge.wxss */
page{
    height: 100%;
    background: #EFEFEF;
}
.recharge_model{
    margin: 20rpx 30rpx;
    border-radius: 16rpx;
    padding: 30rpx;
    background: #fff;
    box-shadow: 0 5px 5px 0 rgba(236,236,236,1);
}
.recharge_model .title{
    font-size: 28rpx;
}
.recharge_ipt{
    padding: 30rpx 0;
    border-bottom: 1px solid #E4E4E4;
}
.recharge_ipt text{
    font-size: 56rpx;
    padding-top: 20rpx;
    padding-right: 10rpx;
}
.recharge_ipt input{
    font-size: 80rpx;
    height: 80rpx;
    padding: 10rpx;
}
.recharge{
    height: 90rpx;
    margin: 90rpx 0 70rpx 0;
    line-height: 90rpx;
    text-align: center;
    color: #fff;
    font-size: 34rpx;
    font-weight: 500;
    border-radius: 10rpx;
    background-image: linear-gradient(to right, #69C63C , #40B333);
}

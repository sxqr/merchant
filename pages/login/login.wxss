/* pages/login/login.wxss */
page,.we_page{
    height: 100%;
    width: 100%;
}
.login_icon{
    width: 160rpx;
    height: 160rpx;
    margin: 0 auto 130rpx;
    padding-top: 50rpx;
}
.login_model{
    margin: 0 60rpx;
}
.login_model .cell{
    align-items: center;
    margin: 50rpx 0;
    border-bottom: 1px solid #DDDDDD;
}
.login_model .cell image{
    width: 46rpx;
    height: 46rpx;
    margin-right: 40rpx;
}
.login_model .cell input{
    flex: 1;
    font-size: 30rpx;
    padding: 20rpx 0;
}
.login_btn{
    height: 90rpx;
    width: 100%;
    margin-top:90rpx; 
    margin-bottom: 100rpx;
    line-height: 90rpx;
    text-align: center;
    color: #fff;
    font-size: 34rpx;
    font-weight: 500;
    border-radius: 10rpx;
    background:linear-gradient(-90deg,rgba(61,178,50,1),rgba(106,198,60,1));
}
.wx_login{
    width: 300rpx;
    margin: 0 auto;
    text-align: center;
    color: #51C300;
    font-size: 30rpx;
    align-items: center;
}
.wx_login image{
    width: 46rpx;
    height: 46rpx;
    margin-right: 20rpx;
}
.consent{
    font-size: 26rpx;
    padding-bottom: 50rpx;
    color: #A3A3A3;
    position: absolute;
    width: 100%;
    bottom: 0;
    text-align: center;
    margin: 0 auto;
}
.consent text{
    color: #6AC63C;
}
.checkbox{
    align-items: center;
    text-align: center;
}
.slect_checkbox{
    width: 30rpx;
    height: 30rpx;
    padding: 10rpx 18rpx 10rpx 0;
    display: inline-block;
}
.slect_checkbox image{
    margin-bottom: -4rpx;
}
.wx_login button{
    font-size: 28rpx;
    color: #6AC63C;
    font-weight: 500;
    width: auto !important;
    margin: 0;
    padding: 20rpx 0;
    background: #fff;
    display: flex;
    align-items: center;
}  

.staff_login_view{
    text-align: right;
}
.staff_login{
    color: #6AC63C;
    font-size: 28rpx;
    border-bottom: 1rpx solid;
}
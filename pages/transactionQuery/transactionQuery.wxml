<!--pages/transactionQuery/transactionQuery.wxml-->
<view class="custom flex_center" style="padding-top:{{statusBarHeight}}px">
  <view class="back" bindtap="back"><image src="../../images/fanhui@3x.png"></image></view>
  <view class="{{facility?'back_title iphone' : 'back_title'}}">交易查询</view>
</view>
<view class="empty_custom" style="padding-top:{{statusBarHeight}}px"></view>
<view class="we_page">
    <view class="transaction">
        <view class="top_menu flex">
            <view class="item active">
                <text>收款明细</text>
            </view>
            <view class="item">
                <text>提现明细</text>
            </view>
        </view>
        <!-- 两个按钮 -->
        <view class="btn_menu flex">
            <view class="cut">
                <view class="item active">日</view>
                <view class="item">月</view>
            </view>
            <!-- 时间选择 -->
            <view class="time_menu">
                <view class="select_time">
                    <text>2020.07.21</text>
                    <view class="line"></view>
                    <image src="../../images/date-icon.png"></image>
                </view>
            </view>
        </view>
    </view>
    <view class="gathering_num">
        <text style="color:#999">收款 </text><text>33.00</text> <text style="padding-left:10rpx">3笔</text>
    </view>
    <view class="list_menu flex">
        <view class="item active"><text>全部</text></view>
        <view class="item"><text>支付宝</text></view>
        <view class="item"><text>微信</text></view>
    </view>

    <view class="page_list">
        <view class="list_cell flex">
            <view class="list_lt">
                <view class="item">
                    <image src="../../images/weChat-icon.png"></image>
                    <text class="wechat">微信</text>
                </view>
                <view class="time">
                    15:12:13
                </view>
            </view>
            <view class="list_rt">
                +11.00
            </view>
        </view>
        <view class="list_cell flex">
            <view class="list_lt">
                <view class="item">
                    <image src="../../images/weChat-icon.png"></image>
                    <text class="wechat">微信</text>
                </view>
                <view class="time">
                    15:12:13
                </view>
            </view>
            <view class="list_rt">
                +11.00
            </view>
        </view>
        <view class="list_cell flex">
            <view class="list_lt">
                <view class="item">
                    <image src="../../images/alipay-icon.png"></image>
                    <text class="alipay">支付宝</text>
                </view>
                <view class="time">
                    15:12:13
                </view>
            </view>
            <view class="list_rt">
                +11.00
            </view>
        </view>
    </view>
</view>

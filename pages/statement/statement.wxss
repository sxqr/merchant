.chart_right{
  position: absolute;
  left: 60%;
  top: 30%;
  width: 40%;
}
.chart_right .item{
  font-size: 26rpx;
  display: block;
  padding-bottom: 20rpx;
  color: #999;
  position: relative;
}
.chart_right .item::before{
  content: "";
  display: inline-block;
  width: 16rpx;
  height: 16rpx;
  border-radius: 100%;
  margin-right: 10rpx;
  background: #DDDDDD;
}
.chart_right .item:nth-child(1)::before{
  background: #55CD51;
}

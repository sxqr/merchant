.statement{
  background: #EFEFEF;
}
.list_cell{
  background: #fff;
  padding: 0 20rpx;
}
.list_cell .item{
  float: left;
  width: 50%;
  padding-top: 20rpx;
}
.list_cell .item .title{
  color: #999;
  font-size: 26rpx;
  display: block;
  padding-top: 15rpx;
}
.list_cell .item .num{
  display: block;
  font-weight: 500;
  padding-top: 10rpx;
  font-size: 40rpx;
}
.deal{
  margin-top: 20rpx;
  background: #fff;
  overflow: hidden;
} 
.statement .time{
  font-weight: 500;
  font-size: 26rpx;
  text-align: right;
  padding: 22rpx 40rpx 22rpx 0;
  color: #A6A6A6;
  background: #EFEFEF;
}
.page_title{
  background: #fff;
  font-size: 32rpx;
  padding: 22rpx 0 22rpx 20rpx;
  border-bottom: 2rpx solid #F1F1F1;
}
.container{
  width: 100%;
  height: 100%;
}

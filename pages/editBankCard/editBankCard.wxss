/* pages/addBankCard/addBankCard.wxss */
page{
    height: 100%;
    background: #EFEFEF;
}
.ht_20{
    height: 20rpx;
    background: #EFEFEF;
}
.inpt_cell .tips{
    color: #999;
    font-size: 28rpx;
}
.inpt_cell .name{
    font-size: 32rpx;
    color: #333;
}
.add_bank .inpt_cell image{
    width: 20rpx;
    height: 26rpx;
    margin-left: 20rpx;
}
.we_page .inpt_cell{
    align-items: center;
    background: #fff;
    padding: 16rpx 30rpx;
    border-bottom: 1px solid #F4F4F4;
}
.inpt_cell text{
    padding-right: 30rpx;
    font-size: 32rpx;
}
.inpt_cell input{
    flex: 1;
    padding: 10rpx 0;
    font-size: 30rpx;
}
.edit_btn,.delete_btn{
    height: 90rpx;
    margin: 60rpx 60rpx 0 60rpx;
    line-height: 90rpx;
    text-align: center;
    color: #fff;
    font-size: 34rpx;
    font-weight: 500;
    border-radius: 10rpx;
    background:linear-gradient(-90deg,rgba(61,178,50,1),rgba(106,198,60,1));
}
.we_page .delete_btn{
    margin-top: 80rpx;
    background:linear-gradient(-90deg,rgba(230,67,64,1),rgba(230,67,64,0.8));
}
.we_page .edit_btn{
    margin-top: 40rpx;
}
.bankNameList{
    position:fixed; 
    top :0px;
    left: 0px;
    right: 0px;
    bottom: 0px;
    text-align: center;
    background:rgba(0,0,0,.3);
    z-index: 99;
}
.bankName_box{
    position: absolute;
    bottom: 0;
    width: 100%;
    height: 600rpx;
    background: #fff;
    z-index: 999;
}
.bankName_box .title{
    font-size: 36rpx;
    line-height: 100rpx;
    border-bottom: 1rpx solid #DDD;
}
.bankName_box .list_cell .cell{
    font-size: 30rpx;
    padding: 25rpx 0;
    border-bottom: 1rpx solid #F8F8F8;
}
